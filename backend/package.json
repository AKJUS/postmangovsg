{
  "name": "backend",
  "version": "0.1.0",
  "description": "Backend / API server for Postman",
  "main": "build/server.js",
  "scripts": {
    "build": "rimraf build && tsc",
    "dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\" \"npm:watch-ts\" \"npm:watch-node\"",
    "postbuild": "npm run copy-assets",
    "start": "node build/server",
    "watch-node": "nodemon build/server",
    "watch-ts": "tsc -w",
    "copy-assets": "copyfiles -u 1 src/assets/* build"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^8.2.0",
    "celebrate": "^12.0.1",
    "express": "^4.17.1",
    "express-validator": "^6.4.0",
    "module-alias": "^2.2.2",
    "pg": "^7.18.2",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.21.5",
    "sequelize-typescript": "^1.1.0",
    "@types/bluebird": "^3.5.30",
    "@types/validator": "^12.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.3",
    "concurrently": "^5.1.0",
    "copyfiles": "^2.2.0",
    "nodemon": "^2.0.2",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3"
  },
  "_moduleAliases": {
    "@core": "build/core"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/datagovsg/postmangovsg.git"
  },
  "bugs": {
    "url": "https://github.com/datagovsg/postmangovsg/issues"
  }
}
