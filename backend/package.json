{
  "name": "backend",
  "version": "0.1.0",
  "description": "Backend / API server for Postman",
  "main": "build/src/server.js",
  "scripts": {
    "build": "npx tsc",
    "dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "start": "node build/src/server",
    "watch-node": "nodemon build/src/server",
    "watch-ts": "npx tsc -w"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.17.1",
    "pg": "^7.18.2",
    "sequelize": "^5.21.5",
    "sequelize-typescript": "^1.1.0"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.30",
    "@types/express": "^4.17.3",
    "@types/validator": "^12.0.1",
    "concurrently": "^5.1.0",
    "dotenv": "^8.2.0",
    "nodemon": "^2.0.2",
    "reflect-metadata": "^0.1.13",
    "typescript": "^3.8.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/datagovsg/postmangovsg.git"
  },
  "bugs": {
    "url": "https://github.com/datagovsg/postmangovsg/issues"
  }
}
